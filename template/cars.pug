doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible' content='ie=edge')
  link(rel='stylesheet' href='https://use.fontawesome.com/releases/v5.6.3/css/all.css' integrity='sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/' crossorigin='anonymous')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.2/animate.min.css')
  link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css' integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T' crossorigin='anonymous')
  title Cars
  link(rel='stylesheet' href='../../css/cars.css')
include nav
.container-fluid.bg
  .row
    .col-lg-12
      #about.text-center
        h2  OUR CARS
        .undersubtitles.d-flex.justify-content-around.py-3.mt-3
          i.fa.fa-2x.fa-car(style='color:rgb(228, 215, 34);' aria-hidden='true')
        pre(style='color:white !important; font-size:1.2rem;')         Home  ->  Cars        
.row.card-wrapper.mt-5.ml-5.mr-5
    for car in cars
        .col-lg-4.text-center.mt-3.mb-3
            .card.car-card
                img.card-image.mt-4.ml-5.mr-5(src=car.img1 alt='the image alt text here' height='190rem')
                .row.justify-content-between.mt-3
                    h5.col-lg-12
                        a.text-danger(href='#') #{car.Name}
                    h8.col-lg-12.text-center.text-primary
                        u Rent : #{car.Rent}$ /day
                hr.mt-2.ml-4.mr-3.mb-2.align-center.col-lg-12
                .row.justify-content-center.mt-2.ml-2.mr-2
                    p.col-lg-12 #{car.minidescription}
                hr.mt-2.ml-4.mr-3.mb-2.align-center.col-lg-9
                .row.justify-content-around
                    h8.col-lg-12.text-center  0-60mph : #{car.Mph060} secs
                    h8.col-lg-12.text-center  Top-Speed : #{car.TopSpeed} Kmph
                    h8.col-lg-12.text-center No. of Airbags : #{car.Airbags} 
                hr.mt-2.ml-4.mr-3.mb-2.align-center.col-lg-9                
                if(car.Rating==5)
                    p.rating    
                        i.fa.fa-star
                        i.fa.fa-star
                        i.fa.fa-star
                        i.fa.fa-star
                        i.fa.fa-star  
                else if(car.Rating==4)
                    p.rating    
                        i.fa.fa-star
                        i.fa.fa-star
                        i.fa.fa-star
                        i.fa.fa-star
                else if(car.Rating==3)
                    p.rating    
                        i.fa.fa-star
                        i.fa.fa-star
                        i.fa.fa-star
                else if(car.Rating==2)
                    p.rating    
                        i.fa.fa-star
                        i.fa.fa-star
                else 
                    p.rating    
                        i.fa.fa-star                                                                                              
                a.btn.bookit.mb-3(href='./car/'+car._id)
                    button(type='submit') Know More
include footer
script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js')
script(src='https://unpkg.com/axios/dist/axios.min.js')
